{
    "name": "just-echo",
    "version": "1.0.7",
    "description": "npm package template",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": "bin/index.js",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "lint": "eslint src tests bin --fix",
        "setup-hooks": "husky install",
        "prepare": "npm run build && npm run setup-hooks",
        "test": "mocha --experimental-specifier-resolution=node --no-warnings tests/**/*.test.js",
        "docs": "typedoc src/index.ts",
        "cli": "bin/index.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/alias-rahil/just-echo.git"
    },
    "author": {
        "email": "rahil.kabani.4@gmail.com",
